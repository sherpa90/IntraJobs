<!-- app/views/job_offers/index.html.erb -->
<div class="container">
    <h1>Ofertas Laborales</h1>
  
    <% @job_offers.each do |job_offer| %>
      <div class="card mb-3">
        <div class="card-body">
          <h2 class="card-title"><%= job_offer.title %></h2>
          <p class="card-text"><%= job_offer.description %></p>
          <a href="<%= new_job_application_path(job_offer_id: job_offer.id) %>" class="btn btn-primary">Postular</a>
        </div>
      </div>
    <% end %>
  </div>
  