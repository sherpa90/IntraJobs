<% @job_offers.each do |job_offer| %>
  <div class="card mb-3">
    <div class="card-body">
      <h5 class="card-title"><%= job_offer.title %></h5>
      <p class="card-text"><%= job_offer.description %></p>
      <p class="card-text"><strong>Publicado por:</strong> <%= job_offer.user.email %></p>
      <%= link_to 'Ver', job_offer_path(job_offer), class: "btn btn-primary" %>
      <% if user_signed_in? && !current_user.admin? %>
        <%= link_to "Postular", new_job_offer_job_application_path(job_offer_id: job_offer.id), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
