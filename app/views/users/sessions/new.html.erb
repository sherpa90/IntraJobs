<!-- app/views/devise/sessions/new.html.erb -->
<div class="container">
  <h1>Iniciar sesión</h1>

  <%= form_with(model: resource, url: session_path(resource_name)) do |form| %>
    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password %>
      <%= form.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= form.check_box :remember_me, class: "form-check-input" %>
          <%= form.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.submit "Iniciar sesión", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
