<!-- app/views/job_applications/new.html.erb -->
<div class="container">
  <h1>Postular a Oferta Laboral</h1>

  <%= form_with(model: @job_application, url: job_offer_job_applications_path(@job_offer), class: "form") do |form| %>
    <div class="form-group">
      <%= form.label :cover_letter %>
      <%= form.text_area :cover_letter, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "Postular", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
